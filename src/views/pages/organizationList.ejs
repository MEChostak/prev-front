<!--Header-->
<%- include('../partials/header') %>

<body>
    <div id="wrapper">
    
        <!--Nav Bar-->
        <%- include('../partials/navbar') %>

        <div id="page-wrapper" class="gray-bg">
            
            <!--Nav Bar White-->
            <%- include('../partials/navbar-white') %>

            <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2>Organizações</h2>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a>Organizações</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <strong>List</strong>
                        </li>
                    </ol>
                </div>
                <div class="col-lg-2" style="margin-top: 30px;">
                    <a href="/organization/create" class="btn btn-lg btn-primary float-right">Add Organização</a>
                </div>
            </div>

            <div class="wrapper wrapper-content animated fadeInRight ecommerce">


                <div class="ibox-content m-b-sm border-bottom">
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="col-form-label" for="product_name">Estado</label>
                                <select id="select_organization" name="select_organization" class="form-control">
                                    <option>-- Selecione--</option>
                                    <option>Alagoas</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="col-form-label" for="product_name">Cidade</label>
                                <select id="select_organization" name="select_organization" class="form-control">
                                    <option>-- Selecione--</option>
                                    <option>Curitiba</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label class="col-form-label" for="status">Status</label>
                                <select name="input_status" id="inputstatus" class="form-control">
                                    <option value="1" selected>Ativa</option>
                                    <option value="0">Inativa</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label class="col-form-label" for="quantity">Nome</label>
                                <input type="text" id="quantity" name="quantity" value="" placeholder="" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="form-group">
                                <button class="btn btn-primary" id="bt_filtrar" type="submit">
                                    <i class="fa fa-search"></i> Pesquisar
                                </button>
                                <button class="btn btn-default" id="bt_limpar_filtro">Limpar</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12">
                        <div class="ibox">
                            <div class="ibox-content">

                                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                                    <thead>
                                        <tr>
                                            <th data-toggle="true">Nome</th>
                                            <th data-hide="phone">Estado/Cidade</th>
                                            <th data-hide="phone">Plan</th>
                                            <th data-hide="phone">Status</th>
                                            <th class="text-right" data-sort-ignore="true">Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                            Direito Previdenciário
                                            </td>
                                            <td>
                                                Paraná/Curitiba
                                            </td>
                                            <td>
                                                R$50,00
                                            </td>
                                            <td>
                                                <span class="label label-primary">Ativa</span>
                                            </td>
                                            <td class="text-right">
                                                <div class="btn-group">
                                                    <button class="btn-white btn btn-xs"><i class="fa fa-search"></i> View</button>
                                                    <button class="btn-white btn btn-xs"><i class="fa fa-edit"></i> Edit</button>
                                                    <button class="btn-white btn btn-xs"><i class="far fa-trash-alt"></i> Delete</button>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                            TTM
                                            </td>
                                            <td>
                                                Paraná/Curitiba
                                            </td>
                                            <td>
                                                R$50,00
                                            </td>
                                            <td>
                                                <span class="label label-primary">Ativa</span>
                                            </td>
                                            <td class="text-right">
                                                <div class="btn-group">
                                                    <button class="btn-white btn btn-xs"><i class="fa fa-search"></i> View</button>
                                                    <button class="btn-white btn btn-xs"><i class="fa fa-edit"></i> Edit</button>
                                                    <button class="btn-white btn btn-xs"><i class="far fa-trash-alt"></i> Delete</button>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="6">
                                                <ul class="pagination float-right"></ul>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>


            </div>

            <!--Footer-->
            <%- include('../partials/footer') %>
            
        </div>
        
        <!--Right sidebar-->
        <%- include('../partials/right-sidebar') %>

    </div>

    <!--Right sidebar-->
    <%- include('../partials/mainly-scripts') %>

    <!-- FooTable -->
    <script src="js/plugins/footable/footable.all.min.js"></script>

    <!-- Select2 -->
    <script src="js/plugins/select2/select2.full.min.js"></script>

    <!-- Page-Level Scripts -->
    <script>
        $(document).ready(function() {

            $('.footable').footable();

            $(".select2_demo_3").select2({
                theme: 'bootstrap4',
                placeholder: "Select a company",
                allowClear: true
            });

        });

    </script>
</body>
</html>
