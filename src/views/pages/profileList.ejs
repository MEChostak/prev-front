                                    <input type="hidden" name="input_id" id="input_id" class="form-control">
                                    <input type="hidden" name="input_organizationId" id="input_organizationId" class="form-control">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="col-form-label" for="product_name">Profile</label>
                                            <select id="select_profile" name="select_profile" value=""
                                                placeholder="Profile" class="form-control">
                                                <option value="">-- Select --</option>
                                                <option value="1">Administrator</option>
                                                <option value="2">Organization Owner</option>
                                                <option value="3">Regular User</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="col-form-label" for="product_name">Organization</label>
                                            <select id="select_organization" name="select_organization"
                                                class="select2_demo_3 form-control">
                                                <option></option>
                                                <option value="Bahamas">Bahamas</option>
                                                <option value="Bahrain">Bahrain</option>
                                                <option value="Bangladesh">Bangladesh</option>
                                                <option value="Barbados">Barbados</option>
                                                <option value="Belarus">Belarus</option>
                                                <option value="Belgium">Belgium</option>
                                                <option value="Belize">Belize</option>
                                                <option value="Benin">Benin</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label class="col-form-label" for="status">Status</label>
                                            <select name="input_status" id="inputstatus" class="select3 form-control">
                                                <option value="" selected>Select</option>
                                                <option value="1">Enabled</option>
                                                <option value="0">Disabled</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label class="col-form-label" for="quantity">Name</label>
                                            <input type="text" id="quantity" name="quantity" value="" placeholder=""
                                                class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label class="col-form-label" for="quantity">E-mail</label>
                                            <input type="text" id="quantity" name="quantity" value="" placeholder=""
                                                class="form-control">
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            </button>
                                            <button class="btn btn-default" id="bt_limpar_filtro">Clear</button>
                                            <button class="btn btn-primary" id="bt_filtrar" type="submit">
                                                <i class="fa fa-search"></i> Search

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <br>
                            <br>

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="ibox">
                                        <div class="ibox-content">

                                            <table class="footable table table-stripped toggle-arrow-tiny"
                                                data-page-size="15">
                                                <thead>
                                                    <tr>

                                                        <th data-toggle="true">Name</th>
                                                        <th data-hide="phone">E-mail</th>
                                                        <th data-hide="phone">Profile</th>
                                                        <th data-hide="phone,tablet">Organization</th>
                                                        <th data-hide="phone">Status</th>
                                                        <th class="text-right" data-sort-ignore="true">Action</th>

                                                    </tr>
                                                </thead>
                                                <tbody id="table_profile">
                                                    <tr>
                                                        <td>
